{
  "name": "root",
  "private": true,
  "packageManager": "yarn@3.2.0",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@types/prettier": "^2",
    "husky": "8.0.1",
    "jest": "29.2.2",
    "prettier": "2.7.1",
    "ts-jest": "29.0.3",
    "ts-node": "10.9.1",
    "typescript": "4.8.4"
  },
  "scripts": {
    "sdk:dev": "yarn workspace @beanstalk/sdk dev",
    "sdk:build": "yarn workspace @beanstalk/sdk build",
    "sdk:test": "jest --selectProjects sdk --silent --runInBand --",
    "sdk:testdev": "jest --selectProjects sdk --watch --runInBand --",
    "sdk:generate": "yarn workspace @beanstalk/sdk generate",
    "sdk:prettier": "yarn prettier packages/sdk -w",
    "ex": "yarn workspace @beanstalk/examples ts --",
    "format": "yarn sdk:prettier",
    "test": "yarn sdk:test",
    "install-husky": "node -e \"try { require('husky').install() } catch (e) {if (e.code !== 'MODULE_NOT_FOUND') throw e}\"",
    "postinstall": "yarn generate && yarn build && yarn install-husky"
  }
}
